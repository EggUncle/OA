<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    tools:context="rixin.app.officeauto.activity.AboutActivity">

    <RelativeLayout
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ac_edit_information_title_height"
        android:orientation="horizontal">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/ac_edit_information_btn_back_size"
            android:layout_height="@dimen/ac_edit_information_btn_back_size"
            android:id="@+id/btn_ac_ed_back"
            android:src="@drawable/firstenter_3_back"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ac_edit_information_title_font_size"
            android:text="@string/about"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <ImageView
        android:paddingTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:paddingTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="服务条款"
        />


    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="U30工作室 版权所有"
        />

</LinearLayout>
