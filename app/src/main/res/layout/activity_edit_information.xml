<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rixin.app.officeauto.activity.EditInformationActivity">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ac_edit_information_title_height"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ac_ed_back"
            android:src="@drawable/firstenter_3_back"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ac_edit_information_title_font_size"
            android:text="@string/edit_information"
            android:textStyle="bold"
            />

    </RelativeLayout>

</LinearLayout>
